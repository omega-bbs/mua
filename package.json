    "mobx": "^3.3.1",
    "mobx-react": "^4.3.3",
    "pepjs": "^0.4.3",
    "polished": "^1.8.1",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-apollo": "^2.0.4",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^3.1.1",
    "react-router-dom": "^4.2.2",
    "react-transition-group": "^2.2.1",
    "recompose": "^0.26.0",
    "redraft": "^0.9.0",
    "styled-components": "^2.2.3"
  },
  "devDependencies": {
    "babel-core": "^7.0.0-beta.3",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-minify-webpack-plugin": "^0.2.0",
