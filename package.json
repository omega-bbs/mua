{
  "name": "@omega-bbs/mua",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/server/app.js --port \"${SERVER_PORT:-8082}\" --manifest ./dist/client/manifest.json --static ./dist/client",
    "build": "npm-run-all build:*",
    "build:client": "npm run client:build",
    "build:server": "npm run server:build",
    "clean": "rm -rf ./dist",
    "proxy": "PORT=\"${PORT:-8080}\" CLIENT_PORT=\"${CLIENT_PORT:-8081}\" SERVER_PORT=\"${SERVER_PORT:-8082}\" API_PORT=\"${API_PORT:-8000}\" caddy -conf ./Caddyfile",
    "predev": "rm -f ./dist/client/manifest.json",
    "dev": "npm-run-all --parallel dev:*",
    "dev:proxy": "npm run proxy",
    "dev:start": "wait-on ./dist/client/manifest.json ./dist/server/app.js && nodemon --watch ./dist/server --exec npm start",
    "dev:client": "npm run client:serve",
    "dev:server": "npm run server:watch -- --display none",
    "client:build": "webpack --config ./webpack/client.config.js",
    "client:watch": "npm run client:build -- --watch",
    "client:serve": "webpack-dev-server --config ./webpack/client.config.js --port \"${CLIENT_PORT:-8081}\" --hot --env.friendly --quiet",
    "server:build": "webpack --config ./webpack/server.config.js",
    "server:watch": "npm run server:build -- --watch",
    "docker:build": "docker build --tag omegabbs/mua .",
    "docker:start": "docker run --rm --publish \"${SERVER_PORT:-8082}:80\" omegabbs/mua",
    "storybook": "start-storybook --port 8088",
    "test": "npm run lint && npm run jest",
    "jest": "jest --coverage --setupTestFrameworkScriptFile ./jest.js",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "prettier": "eslint --fix .",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "commonmark": "^0.28.1",
    "commonmark-react-renderer": "^4.3.3",
    "dom4": "^1.8.5",
    "koa": "^2.3.0",
    "koa-static": "^4.0.1",
    "mobx": "^3.2.2",
    "mobx-react": "^4.2.2",
    "pepjs": "^0.4.3",
    "prop-types": "^15.5.10",
    "react": "^16.0.0-beta.5",
    "react-apollo": "^1.4.14",
    "react-dom": "^16.0.0-beta.5",
    "react-helmet": "^5.1.3",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-router-dom": "^4.2.0",
    "react-transition-group": "^2.2.0",
    "styled-components": "^2.1.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.8",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "coveralls": "^2.13.1",
    "eslint": "^4.5.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-styled-components": "^4.4.1",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "react-test-renderer": "^16.0.0-beta.5",
    "svg-react-loader": "^0.4.4",
    "wait-on": "^2.0.2",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1",
    "webpack-manifest-plugin": "^1.3.1",
    "webpack-node-externals": "^1.6.0"
  }
}
