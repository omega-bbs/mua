{
  "parser": "babel-eslint",
  "plugins": ["prettier", "import", "react"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": "error",
    "object-shorthand": "error",
    "no-useless-return": "error",
    "consistent-return": "error",
    "import/extensions": "error",
    "import/no-duplicates": "error",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all"
      }
    ]
  }
}
